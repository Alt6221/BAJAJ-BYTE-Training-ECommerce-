@using eCommerce.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Categories List!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<eCommerce.Models.Category>

<h1>Welcome to eCommerce Categories</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                    <a asp-area="Products" asp-controller="Home" asp-action="GetParticularCategoryProducts" asp-route-id="@item.CategoryId" class="btn btn-primary">Show Products</a>
            </td>
        </tr>
}
    </tbody>
</table>
